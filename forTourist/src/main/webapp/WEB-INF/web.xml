<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>forTourist</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- jsp파일 -->
  <servlet>
  	<servlet-name>home</servlet-name>
  	<jsp-file>/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>home</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<jsp-file>/loginForm.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>festival</servlet-name>
  	<jsp-file>/search_festivalView.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>festival</servlet-name>
  	<url-pattern>/festival</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>detailFestival</servlet-name>
  	<jsp-file>/detailFestivalView.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>detailFestival</servlet-name>
  	<url-pattern>/detailFestival</url-pattern>
  </servlet-mapping>
  
</web-app>